<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MathX">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView_Timers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="1:23"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:typeface="normal" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView_NomerZadania"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:fontFamily="@font/rubik"
            android:text="Задача 1 из 20"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView_Zadanie"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:fontFamily="@font/rubik"
            android:text="55+99"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="48sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <EditText
            android:id="@+id/editTextNumberOtvet"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:ems="10"
            android:fontFamily="@font/rubik"
            android:hint="Введите ответ"
            android:inputType="number"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/Button_Dalee"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:fontFamily="@font/rubik"
            android:text="Далее"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView_PrimerProverka"
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:fontFamily="@font/rubik"
            android:text="Проверка примера"

            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>